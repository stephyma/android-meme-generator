<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_top_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter top text here"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_bottom_text"
        android:layout_below="@+id/et_top_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter bottom text here"
        android:layout_alignRight="@+id/et_top_text"
        android:layout_alignEnd="@+id/et_top_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a Picture"
        android:id="@+id/btn_take_picture"
        android:layout_below="@+id/et_bottom_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignRight="@+id/et_bottom_text"
        android:layout_alignEnd="@+id/et_bottom_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose from Gallery"
        android:id="@+id/btn_choose_picture"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/btn_take_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/iv_picture"
        android:layout_alignEnd="@+id/iv_picture" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_picture"
        android:layout_below="@+id/btn_choose_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/et_bottom_text"
        android:layout_alignEnd="@+id/et_bottom_text"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_image_black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Meme!"
        android:id="@+id/btn_generate_meme"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/iv_picture"
        android:layout_alignEnd="@+id/iv_picture"
        style="@style/Widget.AppCompat.Button.Colored"/>


</RelativeLayout>
